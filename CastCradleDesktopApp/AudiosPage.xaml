<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CastCradleDesktopApp.AudiosPage"
             Title="Seus áudios">

    <ScrollView>

        <Grid RowDefinitions="Auto, *" ColumnDefinitions="200, *">

            <StackLayout BackgroundColor="#223D5C" Grid.RowSpan="2" Padding="20" Spacing="20">
                <Label Text="Cast Cradle" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="White"
                       HorizontalOptions="Start" />

                <Button Text="Dashboard" 
                        BackgroundColor="#1565C0" 
                        TextColor="White"
                        Clicked="OnDashboardClicked"/>
                <Button Text="Publicar" 
                        BackgroundColor="#1565C0" 
                        TextColor="White"
                        Clicked="OnPublicarClicked"/>
                <Button Text="Vídeos" 
                        BackgroundColor="#1565C0" 
                        TextColor="White"
                        Clicked="OnVideosClicked"/>
                <Button Text="Áudios" BackgroundColor="#1565C0" TextColor="White" />
                <Button Text="Playlists" 
                        BackgroundColor="#1565C0" 
                        TextColor="White" 
                        Clicked="OnPlaylistsClicked"/>
                <Button Text="Canal" 
                        BackgroundColor="#1565C0" 
                        TextColor="White" 
                        Clicked="OnCanalClicked"/>
                <Button Text="Sair" 
                        BackgroundColor="#FF1744" 
                        TextColor="White" 
                        Clicked="OnSairClicked"/>
            </StackLayout>

            <StackLayout Grid.Column="1" Padding="10">
                <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,20">
                    <Button Text="+ Publicar novo conteúdo"
                            Grid.Column="0"
                            BackgroundColor="#4A90E2"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="5"
                            Margin="0,0,10,0"/>
                    <Entry Placeholder="Pesquisar conteúdo"
                           Grid.Column="1"
                           HorizontalOptions="FillAndExpand"
                           Margin="10,0"/>
                    <Image Source="search_icon.png"
                           Grid.Column="2"
                           HeightRequest="25"
                           WidthRequest="25"
                           VerticalOptions="Center" />
                </Grid>

                <StackLayout Spacing="15">
                    <Frame BackgroundColor="White" CornerRadius="10" Padding="10" Margin="0">
                        <Grid RowDefinitions="Auto,Auto,Auto"
                              ColumnDefinitions="Auto,*,Auto"
                              ColumnSpacing="10">
                            <Image Source="rock_apagao.jpg"
                                   WidthRequest="85"
                                   HeightRequest="85"
                                   VerticalOptions="Center"
                                   Grid.RowSpan="3"/>

                            <Label Text="01 - ROCK DO APAGÃO"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   Grid.Column="1"
                                   TextColor="#3A71B8"/>

                            <Label Text="Música"
                                   FontSize="14"
                                   Grid.Column="1"
                                   Grid.Row="1"
                                   TextColor="#1D1B20" />

                            <Label Text="Visualizações: 12 | Data de publicação: 09/11/2024"
                                   FontSize="12"
                                   Grid.Column="1"
                                   Grid.Row="2"
                                   TextColor="Gray" />

                            <StackLayout Orientation="Horizontal" Grid.Column="2" Grid.RowSpan="3" VerticalOptions="Center" Spacing="10">
                                <Image Source="edit_icon.png"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                                <Image Source="delete_icon.png"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                            </StackLayout>
                        </Grid>
                    </Frame>

                    <Frame BackgroundColor="White" CornerRadius="10" Padding="10" Margin="0">
                        <Grid RowDefinitions="Auto,Auto,Auto"
                              ColumnDefinitions="Auto,*,Auto"
                              ColumnSpacing="10">
                            <Image Source="alan_turing.jpg"
                                   WidthRequest="85"
                                   HeightRequest="85"
                                   VerticalOptions="Center"
                                   Grid.RowSpan="3"/>

                            <Label Text="02 - ALAN TURING"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   Grid.Column="1"
                                   TextColor="#3A71B8"/>

                            <Label Text="Podcast"
                                   FontSize="14"
                                   Grid.Column="1"
                                   Grid.Row="1"
                                   TextColor="#1D1B20" />

                            <Label Text="Visualizações: 10 |  Data de publicação: 09/11/2024"
                                   FontSize="12"
                                   Grid.Column="1"
                                   Grid.Row="2"
                                   TextColor="Gray" />

                            <StackLayout Orientation="Horizontal" Grid.Column="2" Grid.RowSpan="3" VerticalOptions="Center" Spacing="10">
                                <Image Source="edit_icon.png"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                                <Image Source="delete_icon.png"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                            </StackLayout>
                        </Grid>
                    </Frame>

                    <Frame BackgroundColor="White" CornerRadius="10" Padding="10" Margin="0">
                        <Grid RowDefinitions="Auto,Auto,Auto"
                              ColumnDefinitions="Auto,*,Auto"
                              ColumnSpacing="10">
                            <Image Source="as_quatro_estacoes.jpg"
                                   WidthRequest="85"
                                   HeightRequest="85"
                                   VerticalOptions="Center"
                                   Grid.RowSpan="3"/>

                            <Label Text="03 - AS QUATRO ESTAÇÕES"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   Grid.Column="1"
                                   TextColor="#3A71B8"/>

                            <Label Text="Música"
                                   FontSize="14"
                                   Grid.Column="1"
                                   Grid.Row="1"
                                   TextColor="#1D1B20" />

                            <Label Text="Visualizações: 5 | Data de publicação: 09/11/2024"
                                   FontSize="12"
                                   Grid.Column="1"
                                   Grid.Row="2"
                                   TextColor="Gray" />

                            <StackLayout Orientation="Horizontal" Grid.Column="2" Grid.RowSpan="3" VerticalOptions="Center" Spacing="10">
                                <Image Source="edit_icon.png"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                                <Image Source="delete_icon.png"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                            </StackLayout>
                        </Grid>
                    </Frame>

                    <Frame BackgroundColor="White" CornerRadius="10" Padding="10" Margin="0">
                        <Grid RowDefinitions="Auto,Auto,Auto"
                              ColumnDefinitions="Auto,*,Auto"
                              ColumnSpacing="10">
                            <Image Source="tendencias_ti.png"
                                   WidthRequest="85"
                                   HeightRequest="85"
                                   VerticalOptions="Center"
                                   Grid.RowSpan="3"/>

                            <Label Text="04 - TENDÊNCIA PARA O PRÓXIMO ANO NA ÁREA DE TI"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   Grid.Column="1"
                                   TextColor="#3A71B8"/>

                            <Label Text="Podcast."
                                   FontSize="14"
                                   Grid.Column="1"
                                   Grid.Row="1"
                                   TextColor="#1D1B20" />

                            <Label Text="Visualizações: 1 | Data de publicação: 09/10/2024"
                                   FontSize="12"
                                   Grid.Column="1"
                                   Grid.Row="2"
                                   TextColor="Gray" />

                            <StackLayout Orientation="Horizontal" Grid.Column="2" Grid.RowSpan="3" VerticalOptions="Center" Spacing="10">
                                <Image Source="edit_icon.png"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                                <Image Source="delete_icon.png"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                            </StackLayout>
                        </Grid>
                    </Frame>

                    <Frame BackgroundColor="White" CornerRadius="10" Padding="10" Margin="0">
                        <Grid RowDefinitions="Auto,Auto,Auto"
                              ColumnDefinitions="Auto,*,Auto"
                              ColumnSpacing="10">
                            <Image Source="ia_cotidiano.jpg"
                                   WidthRequest="85"
                                   HeightRequest="85"
                                   VerticalOptions="Center"
                                   Grid.RowSpan="3"/>

                            <Label Text="05 - INTELIGÊNCIA ARTIFICIAL NO COTIDIANO | PODCAST"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   Grid.Column="1"
                                   TextColor="#3A71B8"/>

                            <Label Text="Podcast"
                                   FontSize="14"
                                   Grid.Column="1"
                                   Grid.Row="1"
                                   TextColor="#1D1B20" />

                            <Label Text="Visualizações: 4 | Data de publicação: 09/10/2024"
                                   FontSize="12"
                                   Grid.Column="1"
                                   Grid.Row="2"
                                   TextColor="Gray" />

                            <StackLayout Orientation="Horizontal" Grid.Column="2" Grid.RowSpan="3" VerticalOptions="Center" Spacing="10">
                                <Image Source="edit_icon.png"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                                <Image Source="delete_icon.png"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                            </StackLayout>
                        </Grid>
                    </Frame>

                    <Frame BackgroundColor="White" CornerRadius="10" Padding="10" Margin="0">
                        <Grid RowDefinitions="Auto,Auto,Auto"
                              ColumnDefinitions="Auto,*,Auto"
                              ColumnSpacing="10">
                            <Image Source="bateria.png"
                                   WidthRequest="85"
                                   HeightRequest="85"
                                   VerticalOptions="Center"
                                   Grid.RowSpan="3"/>

                            <Label Text="06 - TOQUES DE BATERIA"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   Grid.Column="1"
                                   TextColor="#3A71B8"/>

                            <Label Text="Música."
                                   FontSize="14"
                                   Grid.Column="1"
                                   Grid.Row="1"
                                   TextColor="#1D1B20" />

                            <Label Text="Visualizações: 2 | Data de publicação: 09/10/2024"
                                   FontSize="12"
                                   Grid.Column="1"
                                   Grid.Row="2"
                                   TextColor="Gray" />

                            <StackLayout Orientation="Horizontal" Grid.Column="2" Grid.RowSpan="3" VerticalOptions="Center" Spacing="10">
                                <Image Source="edit_icon.png"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                                <Image Source="delete_icon.png"
                                        HeightRequest="25"
                                        WidthRequest="25" />
                            </StackLayout>
                        </Grid>
                    </Frame>

                </StackLayout>
            </StackLayout>
        </Grid>

    </ScrollView>
    
</ContentPage>